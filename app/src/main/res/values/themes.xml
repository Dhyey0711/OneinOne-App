    </style>

    <!-- Style for CustomTextInputEditText -->
    <!-- res/values/styles.xml -->
    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">#000000</item>
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeErrorColor">#F20606</item>
    </style>

